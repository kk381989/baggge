    <!--Login Modal -->
<div id="loginModal" class="modal fade {{#if signupDone}}in{{/if}}" role="dialog">
  <div class="modal-dialog modal-sm">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2 class="modal-title text-center">Sign In to Baggge</h2>
      </div>
      <div class="modal-body">
        <!-- login form starts here -->
        <form action="/login" method="Post" name="loginForm" onsubmit="return loginFormVal()">
          <div class="form-group">
              <label for="userName"><span class="glyphicon glyphicon-user"></span> Username</label>
              <input type="text" class="form-control" name="userName" placeholder="Enter email or number" >
            </div>
            <div class="loginFormError" id="userNameError"></div>
            <div class="form-group">
              <label for="passWord"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
              <input type="password" class="form-control" name="passWord" placeholder="Enter password" >
            </div>
            <div class="loginFormError" id="passWordError"></div>
            <div class="checkbox">
              <label><input type="checkbox" value="" checked>Remember me</label>
            </div>
            <button type="submit" class="btn btn-default btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Login</button>

        </form>
        <!-- login form ends here -->
      </div>
      <div class="modal-footer" align="center" style="background: linear-gradient(to left, #66cccc,#99cccc, #99ffcc);">

      </div>
    </div>

  </div>
</div>

<!-- SignUp Modal -->
<div id="signupModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2 class="modal-title text-center">Sign Up</h2>
      </div>
      <div class="modal-body">
      <!-- Signup form starts here -->
        <form action="/signUp" method="Post" name="signUpForm" onsubmit="return signUpFormVal()">
          <div class="form-group">
            <label for="userName"><span class="glyphicon glyphicon-user"></span> Your Name </label>
            <input type="text" class="form-control" name="userName" id="userName" placeholder="Enter your Name" >
          </div>
          <div class="signUpFormError" id="userNameErr"></div>
          <div class="form-group">
            <label for="emailId"><span class="glyphicon glyphicon-envelope"></span> Email Id</label>
            <input type="email" class="form-control" name="emailId" id="emailId" placeholder="Enter email" >
          </div>
          <div class="signUpFormError" id="emailIdErr"></div>
          <div class="form-group">
            <label for="mobileNumber"><span class="glyphicon glyphicon-phone"></span> Mobile Number</label>
            <input type="number" class="form-control" name="mobileNumber" id="mobileNumber" placeholder="Enter you Number" >
          </div>
          <div class="signUpFormError" id="mobileNumberErr"></div>
          <div class="form-group">
            <label for="passWord"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
            <input type="password" class="form-control" name="passWord" id="passWord" placeholder="Enter password" >
          </div>
          <div class="signUpFormError" id="passWordErr"></div>
          <div id="message" style="display: none;">
         <h5>Password must contain the following:</h5>
         <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
         <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
         <p id="number" class="invalid">A <b>number</b></p>
         <p id="splChars" class="invalid">A <b>Special Character</b></p>
         <p id="length" class="invalid">Minimum <b>6 characters</b></p>
        </div>

            <button type="submit" class="btn btn-default btn-block">
            <span class="glyphicon glyphicon-off"></span> Signup</button>
        </form>
        <!-- signup form ends here -->

      </div>
      <div class="modal-footer" align="center" style="background: linear-gradient(to left, #66cccc,#99cccc, #99ffcc);">

      </div>
    </div>

  </div>
</div>

