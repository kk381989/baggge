       data-address="{{this.address}}"
       data-city="{{this.city}}"
       data-pincode="{{this.pincode}}"
       data-state="{{this.state}}"
       data-country="{{this.country}}"
       data-website="{{this.website}}"
       data-mnumber="{{this.mobNumber}}"
       data-tnumber="{{this.telNumber}}"
       data-time="{{this.time}}"
       data-starcat="{{this.starCategory}}"
       data-nairport="{{this.nearestAirport}}"
       data-description="{{this.description}}"
       >
        <div class="hotelCard">
           <div class="row">
           <div class="col-sm-7">
           <img class="img-thumbnail" src="/images/hotelsUploads/{{this.hotelId}}room1" onerror="this.src='/images/hotel.png';" height="120px" width="100px">
