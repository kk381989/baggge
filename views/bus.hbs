<script>
window.addEventListener('message', function(e){
		$("#full_page_loader").hide();
		var $iframe = $('#flights');
		var eventName = e.data[0];
		var data = e.data[1];
		//alert(data);
		switch(eventName) {
 			case 'setHeight':
            $iframe.height(data);
            break;
    }
},false);
</script>